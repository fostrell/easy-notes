@import '../../styles/variables'

.Spinner__container_item1 {
  position: absolute;
  display: block;
  width: 8em;
  height: 8em;
  border-radius: 50%;
  border: 1px solid transparent;
  border-top-color: white;
  :global {
    animation: spin 2s linear infinite; /* Chrome, Firefox 16+, IE 10+, Opera */
  }
}

.Spinner__container_item2 {
  position: absolute;
  display: block;
  width: 7.5em;
  height: 7.5em;
  border-radius: 50%;
  border: 1px solid transparent;
  border-top-color: white;
  :global {
    animation: spin 3s linear infinite; /* Chrome, Firefox 16+, IE 10+, Opera */
  }
}

.Spinner__container_item3 {
  position: absolute;
  display: block;
  width: 7em;
  height: 7em;
  border-radius: 50%;
  border: 1px solid transparent;
  border-top-color: white;
  :global {
    animation: spin 1.5s linear infinite; /* Chrome, Firefox 16+, IE 10+, Opera */
  }
}

.Spinner__small_item1 {
  width: 4em;
  height: 4em;
}

.Spinner__small_item2 {
  width: 3.6em;
  height: 3.6em;
}

.Spinner__small_item3 {
  width: 3.2em;
  height: 3.2em;
}

.Spinner__middle_item1 {
  width: 6em;
  height: 6em;
}

.Spinner__middle_item2 {
  width: 5.6em;
  height: 5.6em;
}

.Spinner__middle_item3 {
  width: 5.2em;
  height: 5.2em;
}

.Spinner__wrap {
  position: absolute;
  opacity: 0;
  bottom: 10000px;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  min-height: 8em;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.Spinner__wrap_full {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.Spinner__wrap_hide {
  :global {
    animation: hide-spinner .5s forwards;
  }
}

.Spinner__wrap_show {
  :global {
    animation: show-spinner .5s forwards;
  }
}

.Spinner__wrap_small {
  min-height: 4em;
}

.Spinner__wrap_middle {
  min-height: 6em;
}
