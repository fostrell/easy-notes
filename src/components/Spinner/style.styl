@import '../../styles/variables'

.container
  display: block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 1px solid transparent;
  border-top-color: $mainColor;
  animation: spin 2s linear infinite; /* Chrome, Firefox 16+, IE 10+, Opera */

  &:before
    content: "";
    position: absolute;
    top: 5px;
    left: 5px;
    right: 5px;
    bottom: 5px;
    border-radius: 50%;
    border: 1px solid transparent;
    border-top-color: $g-parks-sider-bg;
    animation: spin 3s linear infinite;

  /* Chrome, Firefox 16+, IE 10+, Opera */

  &:after
    content: "";
    position: absolute;
    top: 12px;
    left: 12px;
    right: 12px;
    bottom: 12px;
    border-radius: 50%;
    border: 1px solid transparent;
    border-top-color: $colorThirdMain;
    animation: spin 1.5s linear infinite;

/* Chrome, Firefox 16+, IE 10+, Opera */

.small
  width: 50px;
  height: 50px;

&:before
  top: 3px;
  left: 3px;
  right: 3px;
  bottom: 3px;

&:after
  top: 7px;
  left: 7px;
  right: 7px;
  bottom: 7px;

.middle
  width: 75px;
  height: 75px;

&:before
  top: 3px;
  left: 3px;
  right: 3px;
  bottom: 3px;

&:after
  top: 7px;
  left: 7px;
  right: 7px;
  bottom: 7px;

.wrap
  position absolute
  opacity: 0;
  bottom: 10000px;
  display flex
  flex: 1
  justify-content: center;
  align-items: center;
  min-height 100px
  width: 100%;
  height: 100%;
  z-index: 1000;

.wrap_full
  display flex
  flex 1
  align-items center
  justify-content center
  width 100%
  height 100%
  background-color rgba(255, 255, 255, 0.3)

.wrap_hide
  animation: hide-spinner .5s forwards;

.wrap_show
  animation: show-spinner .5s forwards;

.wrap_small
  min-height 50px

.wrap_middle
  min-height 75px

:global {
  @keyframes hide-spinner {
    0% {
      opacity: 1;
      bottom: 0;
    }
    99% {
      opacity: 0;
      bottom: 0;
    }
    100% {
      opacity: 0;
      bottom: 10000px;
    }
  }

  @keyframes show-spinner {
    0% {
      opacity: 0;
      bottom: 10000px;
    }
    99% {
      opacity: 1;
      bottom: 10000px;
    }
    100% {
      opacity: 1;
      bottom: 0;
    }
  }

  @keyframes spin {
    0% {
      -webkit-transform: rotate(0deg); /* Chrome, Opera 15+, Safari 3.1+ */
      -ms-transform: rotate(0deg); /* IE 9 */
      transform: rotate(0deg); /* Firefox 16+, IE 10+, Opera */
    }
    100% {
      -webkit-transform: rotate(360deg); /* Chrome, Opera 15+, Safari 3.1+ */
      -ms-transform: rotate(360deg); /* IE 9 */
      transform: rotate(360deg); /* Firefox 16+, IE 10+, Opera */
    }
  }
}