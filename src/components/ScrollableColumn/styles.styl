.container
  overflow auto
  display: flex;
  flex-direction: column;
  flex: 1;
  height 100%

.scroll_container
  position: relative
  flex: 1 1;
  display: flex;

.scroll_top
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 16px
  z-index 16

.scroll_bottom
  position: absolute
  bottom: 0
  left: 0
  right: 0
  height: 16px
  z-index 16

.column_toolbar
  width 100%

.column_content
  flex: 1;
  position relative
  display: flex;
  flex-direction: column;
  overflow: auto;

.column_content_absolute
  position absolute
  width 100%
  height 100%

.column_footer
  width 100%

.scrollbar
  position: relative;
  display: block;
  width: 100%;
  cursor: pointer;
  border-radius: inherit;
